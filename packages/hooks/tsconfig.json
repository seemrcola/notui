{
  "extends": "../../tsconfig.json",
  "exclude": [
    "**/dist/**",
    "./unocss.config.ts",
    "node_modules"
  ],
  "include": [
    "**/*.ts",
    "**/*.d.ts"
  ],
  "compilerOptions": {
    "declaration": true, // 表示是否生成 .d.ts 文件
    "declarationDir": "./dist", // 表示生成 .d.ts 文件的目录
    "declarationMap": false, // 表示是否生成 .d.ts.map 文件
    "emitDeclarationOnly": true, // 表示是否只生成 .d.ts 文件
    "disableSolutionSearching": true, // 表示是否禁用解决方案搜索
    "skipLibCheck": true // 表示是否跳过所有声明文件的类型检查
  }
}
